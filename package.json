{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "resolutions": {
    "get-pkg-repo": "4.1.1",
    "hosted-git-info": "^2.1.4"
  },
  "scripts": {
    "clean": "rimraf packages/*/dist",
    "lint": "nx run-many --target=lint --all --parallel",
    "lint:force": "nx run-many --target=lint --all --parallel --skip-nx-cache",
    "lint:global": "eslint .",
    "plugin:release": "ts-node ./scripts/release.ts",
    "build": "nx run-many --target=build --all --parallel",
    "build:force": "nx run-many --target=build --all --parallel --skip-nx-cache",
    "test": "nx run-many --target=test --all --parallel",
    "test:force": "nx run-many --target=test --all --parallel --skip-nx-cache",
    "test:types": "nx run-many --target=test:types --all --parallel",
    "test:types:force": "nx run-many --target=test:types --all --parallel --skip-nx-cache",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --cache --fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.7",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@nrwl/nx-cloud": "latest",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.2.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/jest": "^29.2.4",
    "babel-jest": "^29.3.1",
    "babel-plugin-module-resolver": "4.1.0",
    "cross-env": "^7.0.3",
    "eslint-config-pixi-react": "*",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-extended": "^3.2.0",
    "jest-watch-typeahead": "^2.2.1",
    "lint-staged": "^13.1.0",
    "nx": "15.3.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.0",
    "rollup-plugin-filesize": "^9.1.2",
    "tsconfig": "*",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
