# This file is for unifying the coding style for different editors and IDEs.
# More information at http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[{*.js,*.ts,*.mjs}]
quote_type = single

[{*.json,.github/workflows/*.yml,*.md}]

indent_size = 2
