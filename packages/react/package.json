{
  "name": "@pixi/react",
  "version": "7.0.2",
  "description": "Write PixiJS applications using React declarative style.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixijs/pixi-react.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "main": "index.js",
  "module": "module.js",
  "jsnext:main": "module.js",
  "typings": "./index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./index.d.ts",
        "default": "./module.js"
      },
      "require": {
        "types": "./index.d.ts",
        "default": "./index.js"
      }
    }
  },
  "files": [
    "dist/",
    "LICENSE",
    "README.md",
    "index.d.ts",
    "index.js",
    "module.js"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:dev && npm run build:prod",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "clean": "rimraf ./dist",
    "test": "jest --silent",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "@pixi/react-components": "*",
    "@pixi/react-fiber": "*",
    "@pixi/react-invariant": "*",
    "@pixi/react-modular": "*",
    "@pixi/events": "^7.1.1",
    "@testing-library/react": "^13.4.0",
    "canvas": "^2.11.0",
    "jest-webgl-canvas-mock": "^0.2.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0"
  },
  "peerDependencies": {
    "@pixi/math": ">=6.0.0",
    "@pixi/app": ">=6.0.0",
    "@pixi/ticker": ">=6.0.0",
    "@pixi/display": ">=6.0.0",
    "@pixi/core": ">=6.0.0",
    "@pixi/sprite-animated": ">=6.0.0",
    "@pixi/text-bitmap": ">=6.0.0",
    "@pixi/graphics": ">=6.0.0",
    "@pixi/mesh-extras": ">=6.0.0",
    "@pixi/particle-container": ">=6.0.0",
    "@pixi/constants": ">=6.0.0",
    "@pixi/sprite": ">=6.0.0",
    "@pixi/text": ">=6.0.0",
    "@pixi/sprite-tiling": ">=6.0.0",
    "prop-types": ">=15.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "6d5b98bc6d7eafd1b0016e60a725b2b6c9f46a33"
}
