{
  "compilerOptions": {
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "checkJs": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@testing-library/jest-dom",
      "react",
      "vite/client",
      "vitest",
    ],
  },
  "exclude": [
    "./dist/**/*",
    "./lib/**/*",
    "./node_modules/**/*",
    "./types/**/*",
  ],
  "include": [
    "./src/**/*",
    "./test/**/*",
    "./vitest.setup.ts",
    "./vitest.workspace.ts",
  ]
}
