{
  "name": "@pixi/react-fiber-react-18",
  "private": true,
  "description": "Configurable React Reconciler for PixiJS and React 17/18",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixijs/pixi-react.git",
    "directory": "packages/react-fiber-react-18"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf ../react-fiber/v18/dist",
    "prebuild": "npm run clean",
    "build": "npm run build:versions && npm run build:types && npm run build:dev && npm run build:prod",
    "build:versions": "./scripts/getVersions.mjs",
    "build:types": "tsc -p tsconfig.types.json",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "test": "jest --silent",
    "test:ci": "jest --silent --runInBand",
    "test:types": "tsc --noEmit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@pixi/react-invariant": "*"
  },
  "devDependencies": {
    "@pixi/react-modular": "*",
    "@types/react-reconciler": "^0.28.2",
    "react-reconciler": "^0.29.0"
  }
}
