{
  "name": "@pixi/react-pixi",
  "version": "7.0.0-alpha.0",
  "description": "Write PixiJS applications using React declarative style.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inlet/react-pixi.git"
  },
  "license": "MIT",
  "author": "Patrick Brouwer <patrick@inlet.nl>",
  "main": "index.js",
  "module": "module.js",
  "jsnext:main": "module.js",
  "typings": "./index.d.ts",
  "files": [
    "dist/",
    "animated/",
    "legacy/",
    "LICENSE",
    "index.d.ts",
    "index.js",
    "umd.js",
    "module.js"
  ],
  "scripts": {
    "build": "rimraf ./dist && npm run build:dev && npm run build:prod",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "build:watch": "cross-env FORMAT=umd NODE_ENV=development rollup -c --watch",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prepack": "if-env CI=true && echo \"skip build\" || (npm run test && npm run eslint && npm run build)",
    "test": "jest --silent",
    "test:watch": "jest --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,mjs}": [
      "eslint --cache --fix --max-warnings 0"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "roots": [
      "./test"
    ],
    "setupFiles": [
      "jest-webgl-canvas-mock",
      "<rootDir>/test/bootstrap.js",
      "<rootDir>/test/__mocks__/matchMediaMock.js"
    ],
    "testEnvironment": "jsdom",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "resolutions": {
    "get-pkg-repo": "4.1.1",
    "hosted-git-info": "^2.1.4"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.8",
    "@react-spring/animated": "^9.6.1",
    "lodash.isnil": "4.0.0",
    "lodash.times": "4.3.2",
    "performance-now": "2.1.0",
    "pixi.js": "^6.0.0",
    "prop-types": "^15.8.1",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-reconciler": "0.29.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.7",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@nrwl/nx-cloud": "latest",
    "@pixi/eslint-config": "^4.0.1",
    "@rollup/plugin-alias": "^4.0.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.2.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.4",
    "@types/react": "17.0.15",
    "@types/react-dom": "17.0.9",
    "@types/react-reconciler": "0.26.3",
    "babel-jest": "^29.3.1",
    "babel-plugin-module-resolver": "4.1.0",
    "canvas": "^2.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "if-env": "^1.0.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-extended": "^3.2.0",
    "jest-watch-typeahead": "^2.2.1",
    "jest-webgl-canvas-mock": "^0.2.3",
    "lint-staged": "^13.1.0",
    "nx": "15.3.0",
    "react-test-renderer": "18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.7.0",
    "rollup-plugin-filesize": "^9.1.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "@babel/runtime": "^7.14.8",
    "pixi.js": ">=6.0.0",
    "prop-types": "^15.8.1",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  }
}
