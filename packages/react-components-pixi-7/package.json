    "@pixi/ticker": "^7.0.0",
    "@testing-library/react": "^13.4.0",
    "@types/lodash.isnil": "^4.0.7",
    "@types/react-test-renderer": "^18.0.0",
    "canvas": "^2.11.0",
    "jest-webgl-canvas-mock": "^0.2.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rollup-plugin-copy": "^3.4.0"
  },
  "peerDependencies": {
    "@pixi/app": ">=6.0.0",
