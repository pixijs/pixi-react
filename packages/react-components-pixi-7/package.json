    "@pixi/sprite-tiling": ">=6.0.0",
    "@pixi/text": ">=6.0.0",
    "@pixi/text-bitmap": ">=6.0.0",
    "@pixi/ticker": ">=6.0.0",
    "prop-types": ">=15.0.0",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
