    "@pixi/constants": "^7.0.0",
    "@pixi/core": "^7.0.0",
    "@pixi/display": "^7.0.0",
    "@pixi/events": "^7.1.1",
    "@pixi/graphics": "^7.0.0",
    "@pixi/math": "^7.0.0",
    "@pixi/mesh-extras": "^7.0.0",
    "@pixi/particle-container": "^7.0.0",
    "@pixi/react-fiber": "*",
    "@pixi/react-invariant": "*",
    "@pixi/react-modular": "*",
    "@pixi/sprite": "^7.0.0",
