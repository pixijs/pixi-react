{
  "name": "@pixi/react-components-pixi-v7",
  "private": true,
  "description": "PixiJS V7 components for the @pixi/react library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pixijs/pixi-react.git",
    "directory": "packages/react"
  },
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "prebuild": "npm run clean",
    "clean": "rimraf ../react-components/v7/dist",
    "build": "npm run build:types && npm run build:dev && npm run build:prod",
    "build:types": "tsc -p tsconfig.types.json",
    "build:dev": "cross-env NODE_ENV=development rollup -c",
    "build:prod": "cross-env NODE_ENV=production rollup -c",
    "postbuild": "./scripts/fixDeclarationReference.mjs",
    "test": "jest --silent",
    "test:ci": "jest --silent --runInBand",
    "test:types": "tsc --noEmit",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@pixi/react-invariant": "*",
    "lodash.isnil": "4.0.0",
    "prop-types": ">=15.0.0"
  },
